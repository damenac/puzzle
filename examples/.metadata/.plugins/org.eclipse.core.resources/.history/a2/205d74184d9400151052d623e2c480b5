package fsm

/**
 * A language for UML state machines.
 */
language UML {
	syntax "platform:/resource/puzzle.examples.fsm.uml.metamodel/models/fsmUml.ecore"
	
	with fsmumlaspects.StateMachineAspect
	with fsmumlaspects.RegionAspect
	with fsmumlaspects.StateAspect
	with fsmumlaspects.TransitionAspect
	with fsmumlaspects.TriggerAspect
	with fsmumlaspects.AndTriggerAspect
	with fsmumlaspects.FinalStateAspect
	with fsmumlaspects.ConstraintAspect
	with fsmumlaspects.StatementAspect
	with fsmumlaspects.ProgramAspect
	
	exactType UMLMT
}

/**
 * A language for Rhapsody state machines.
 */
language Rhapsody{
	syntax "platform:/resource/puzzle.examples.fsm.rhapsody.metamodel/models/fsmRhapsody.ecore"

	with fsmrhapsodyaspects.StateMachineAspect
	with fsmrhapsodyaspects.RegionAspect
	with fsmrhapsodyaspects.StateAspect
	with fsmrhapsodyaspects.TransitionAspect
	with fsmrhapsodyaspects.TriggerAspect
	with fsmrhapsodyaspects.FinalStateAspect
	with fsmrhapsodyaspects.ConstraintAspect
	with fsmrhapsodyaspects.StatementAspect
	with fsmrhapsodyaspects.ProgramAspect

	exactType RhapsodyMT
}

/**
 * A language for Harel state machines.
 */
language Harel {
	syntax "platform:/resource/puzzle.examples.fsm.harel.metamodel/models/fsmHarel.ecore"
	
	with fsmharelaspects.StateMachineAspect
	with fsmharelaspects.RegionAspect
	with fsmharelaspects.StateAspect
	with fsmharelaspects.TransitionAspect
	with fsmharelaspects.TriggerAspect
	with fsmharelaspects.AndTriggerAspect
	with fsmharelaspects.OrTriggerAspect
	with fsmharelaspects.NotTriggerAspect
	with fsmharelaspects.FinalStateAspect
	with fsmharelaspects.ConstraintAspect
	with fsmharelaspects.StatementAspect
	with fsmharelaspects.ProgramAspect
	
	exactType HarelMT
}