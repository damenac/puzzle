package fr.inria.diverse.puzzle.examples.triggers.semantics

import fr.inria.diverse.k3.al.annotationprocessor.Aspect
import puzzle.annotations.processor.OverrideRequiredAspectMethod

import org.eclipse.emf.common.util.EList
import complextriggers.AndTrigger
import static exntesion

// *.*
// ASPECT
@Aspect(className=AndTrigger)
class TriggerAspect {
	
	@OverrideRequiredAspectMethod
	def public boolean evalTrigger(EList<String> events){
		if(_self instanceof AndTrigger){
			return (_self as AndTrigger).evalTrigger(events)
		}
		return _self.right.evalTrigger(events) && _self.left.evalTrigger(events)
	}
}