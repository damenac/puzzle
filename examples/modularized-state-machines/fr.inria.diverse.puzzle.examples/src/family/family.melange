/**
 * A language for simple expressions
 */
language Expressions implements ProvidedExpressions {
	
	syntax "platform:/resource/fr.inria.diverse.puzzle.examples.expressions.syntax/models/Expression.ecore"
	
	with fr.inria.diverse.puzzle.examples.expr.semantics.ExpressionAspect 
	with fr.inria.diverse.puzzle.examples.expr.semantics.ArithmeticExpressionAspect
	with fr.inria.diverse.puzzle.examples.expr.semantics.IntegerLitAspect
	with fr.inria.diverse.puzzle.examples.expr.semantics.RelationalExpressionAspect
	with fr.inria.diverse.puzzle.examples.expr.semantics.StringLitAspect
	with fr.inria.diverse.puzzle.examples.expr.semantics.BoolLitAspect
	with fr.inria.diverse.puzzle.examples.expr.semantics.VarRefAspect
	
	exactType ExpressionsMT
}

/**
 * Provided interface for the Expressions language unit
 */
modeltype ProvidedExpressions {
	syntax "platform:/resource/fr.inria.diverse.puzzle.examples.expressions.syntax/models/Expression-provided.ecore"
}

