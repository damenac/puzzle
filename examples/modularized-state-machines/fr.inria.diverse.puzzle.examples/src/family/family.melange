	with fr.inria.diverse.puzzle.examples.actionscripting.semantics.AssignationAspect
	with fr.inria.diverse.puzzle.examples.actionscripting.semantics.BlockAspect
	with fr.inria.diverse.puzzle.examples.actionscripting.semantics.ConditionalAspect
	with fr.inria.diverse.puzzle.examples.actionscripting.semantics.LoopAspect
	with fr.inria.diverse.puzzle.examples.actionscripting.semantics.PrintAspect
	with fr.inria.diverse.puzzle.examples.actionscripting.semantics.PrintlnAspect
	with fr.inria.diverse.puzzle.examples.actionscripting.semantics.StatementAspect
	with fr.inria.diverse.puzzle.examples.actionscripting.semantics.VarDeclAspect
	with fr.inria.diverse.puzzle.examples.actionscripting.semantics.WaitAspect

	exactType ActionScriptingMT
}

modeltype RequiredActionScripting {
	syntax "platform:/resource/fr.inria.diverse.puzzle.examples.actionscripting.syntax/models/actionscripting-required.ecore"
