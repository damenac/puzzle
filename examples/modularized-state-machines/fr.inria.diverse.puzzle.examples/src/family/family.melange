package family

/**
 * A language for state machines.
 */
language FSM implements ProvidedFSM requires RequiredFSM {
	syntax "platform:/resource/fr.inria.diverse.puzzle.examples.fsm.syntax/models/fsm.ecore"
	
	with fr.inria.diverse.puzzle.examples.statemachine.semantics.StateMachineAspect
	with fr.inria.diverse.puzzle.examples.statemachine.semantics.RegionAspect
	with fr.inria.diverse.puzzle.examples.statemachine.semantics.StateAspect
	with fr.inria.diverse.puzzle.examples.statemachine.semantics.TransitionAspect
	with fr.inria.diverse.puzzle.examples.statemachine.semantics.TriggerAspect
	
	exactType FSMMT
}

modeltype RequiredFSM {
	syntax "platform:/resource/fr.inria.diverse.puzzle.examples.fsm.syntax/models/fsm-required.ecore"
}

modeltype ProvidedFSM {
	syntax "platform:/resource/fr.inria.diverse.puzzle.examples.fsm.syntax/models/fsm-provided.ecore"
}
 
